<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mealz" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Theme.Mealz" parent="Base.Theme.Mealz" />

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/brownish_gray</item>        <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/brownish_gray</item> <!--selected day-->
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogThemeButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogThemeButton</item>
    </style>

    <style name="DialogThemeButton" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/brownish_gray</item>
    </style>
</resources>